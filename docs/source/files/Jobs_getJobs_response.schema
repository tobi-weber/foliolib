{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Collection of jobs",
    "JobCollection": {
        "type": "object",
        "properties": {
            "jobRecords": {
                "type": "array",
                "description": "Jobs",
                "items": {
                    "$ref": "job.json#/Job"
                }
            },
            "totalRecords": {
                "type": "integer"
            }
        },
        "required": [
            "jobRecords",
            "totalRecords"
        ]
    }
}